<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_desplegar_tarea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="16dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="180dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nombre_tarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Videojuego psp"
                android:drawableLeft="@drawable/ic_tareas"
                android:drawableTint="#919191"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">





            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="#5d5d5d" />



        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_productos"
            android:drawableTint="#CCCBCB"
            android:drawablePadding="16dp"
            android:textSize="21sp"
            android:text="Cantidad: 2" />

        <TextView
            android:id="@+id/txt_sublote_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="15dp"
            android:paddingLeft="130dp"
            android:textColor="#3E9854"
            android:textSize="21sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableLeft="@drawable/ic_direccion"
            android:drawableTint="#CCCBCB"
            android:drawablePadding="16dp"
            android:textSize="21sp"
            android:text="Por pagar: $2000.0" />

        <TextView
            android:id="@+id/txt_a_pagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawablePadding="15dp"
            android:paddingLeft="140dp"
            android:textColor="#3E9854"
            android:textSize="21sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/txt_fecha_limite"
        android:text="@string/Vence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawablePadding="16dp"
        android:textSize="16sp"
        android:visibility="gone"
         />


    <Button
        android:id="@+id/btn_reporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Entregado"
        android:background="@color/colorGreen"

        android:textColor="#fff" />
    <Button
        android:id="@+id/btn_cerrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#DCB300"
        android:text="Aceptar"
        android:textColor="#fff" />

</LinearLayout>