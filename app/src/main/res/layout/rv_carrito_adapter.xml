<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="200dp"
    android:paddingBottom="20dp"
    android:orientation="vertical">


    <View
        android:id="@+id/rvDivisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/rv_ivFoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_imagen"
                android:backgroundTint="@color/colorBlue"
                />
            <LinearLayout

                android:id="@+id/rv_lyTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:paddingRight="5dp">


                <TextView
                    android:id="@+id/rv_txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reparacion de muro"
                    android:layout_centerHorizontal="true"
                   android:paddingLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="20sp"
                    android:autoSizeMinTextSize="15sp"
                    tools:ignore="MissingConstraints" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:orientation="horizontal"
                    android:textAlignment="gravity">
                    <TextView
                        android:id="@+id/txt_precio_carrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="14dp"
                        android:text="AlbaÃ±ileria"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        tools:ignore="MissingConstraints" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="right"
                        android:text="Aplicar"
                        android:textColor="@color/colorWhite"
                        android:background="@color/primary"
                        android:layout_marginLeft="90dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"

            android:paddingHorizontal="14dp"
            android:text="Descripcion:"

            android:textSize="18sp"

            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:paddingHorizontal="14dp"
            android:text="asdasdasdasdsadadasdasdsada"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"

            tools:ignore="MissingConstraints" />
    </LinearLayout>

</LinearLayout>