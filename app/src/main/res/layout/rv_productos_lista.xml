<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/rvDivisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="93dp"
        android:layout_marginRight="10dp"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rv_encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/rv_lyTitulo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="80dp"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"

                android:paddingRight="5dp">

              <ImageView
                  android:paddingLeft="5dp"
                  android:id="@+id/rv_ivFoto"
                  android:layout_width="100dp"
                  android:layout_height="100dp"
                  android:layout_gravity="center"
                  android:src="@drawable/abrir_galeria"/>

                <TextView
                    android:id="@+id/rv_txtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingHorizontal="14dp"
                    android:text="Nombre"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

            <ImageView
                android:id="@+id/rvEditar"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="-80dp"
                android:tint="@color/colorGreen"
                app:srcCompat="@drawable/ic_editar" />

            <ImageView
                android:id="@+id/rvEliminar"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:tint="@color/colorRed"
                app:srcCompat="@drawable/ic_eliminar" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>