<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


        <android.support.v7.widget.CardView
            android:id="@+id/card_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            android:visibility="gone"

            app:cardBackgroundColor="#B338FF">

            <LinearLayout
                android:id="@+id/rv_encabezado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/rv_lyTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="80dp"

                    android:foreground="?attr/selectableItemBackground"
                    android:orientation="horizontal"

                    android:paddingRight="5dp">

                    <ImageView
                        android:paddingLeft="5dp"
                        android:id="@+id/rv_ivFoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:layout_gravity="center"


                        android:src="@drawable/abrir_galeria"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center">
                        <TextView
                            android:id="@+id/rv_txtNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="14dp"
                            android:text="Juan Carlos Bodoque"
                            android:layout_marginTop="20dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:id="@+id/txt_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="14dp"
                            android:text="Arquitecto"
                            android:layout_marginTop="10dp"
                            android:textColor="#D6D5D5"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_showProfile"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="-60dp"

                    android:padding="8dp"
                    android:tint="#FFFFFF"
                    app:srcCompat="@drawable/ic_ojo" />



            </LinearLayout>

        </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txtNoHay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="30dp"
            android:text="No hay solicitudes"
            android:textColor="#57000000"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            android:visibility="gone" />



    </LinearLayout>

</FrameLayout>