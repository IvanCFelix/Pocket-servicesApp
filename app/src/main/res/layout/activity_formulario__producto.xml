<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".Agregar.Producto.Formulario_Jobs">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vpMedia"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:visibility="gone" />

                        <android.support.design.widget.TabLayout
                            android:id="@+id/tabDots"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:tabBackground="@drawable/tab_selector"
                            app:tabGravity="center"
                            app:tabIndicatorHeight="0dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">



                        </LinearLayout>
                        <ImageView
                            android:id="@+id/iv_RegistrarFoto"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:nestedScrollingEnabled="true"
                            android:padding="50dp"
                            android:scaleType="fitCenter"
                            android:tint="@color/colorBlue"
                            app:srcCompat="@drawable/ic_agregar_foto" />
                        <ImageView
                            android:id="@+id/iv_imagen"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_agregar_foto" />
                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/til_RegistrarReporte_Titulo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="@string/titulo"
                            android:textAlignment="center"
                            android:textColorHint="#808080"
                            app:counterEnabled="true"
                            app:counterMaxLength="30"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/txt_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/colorPrimary"
                                android:maxLength="30"
                                android:textStyle="bold"
                                android:paddingTop="15dp"
                                android:textAlignment="textStart"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:hint="@string/descripcion"
                            android:textAlignment="center"
                            android:textColorHint="#808080"
                            app:counterEnabled="true"
                            app:counterMaxLength="250"
                            app:errorEnabled="true">

                            <EditText
                                android:id="@+id/txt_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableTint="@color/colorPrimary"
                                android:inputType="textMultiLine"
                                android:maxLength="250"
                                android:textStyle="bold"
                                android:paddingTop="15dp"
                                android:textAlignment="textStart"
                                android:textSize="15sp" />
                        </android.support.design.widget.TextInputLayout>




                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Categoria"
                                android:textSize="20dp"/>
                            <Spinner
                                android:id="@+id/spn_job_category"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingBottom="10dp" />




                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <Button
                    android:id="@+id/btn_agg_listing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_grande"
                    android:text="Agregar"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>
